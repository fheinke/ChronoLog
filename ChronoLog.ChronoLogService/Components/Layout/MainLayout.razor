@using ChronoLog.Core.Interfaces
@using ChronoLog.Core.Models
@using ChronoLog.Core.Models.DisplayObjects
@inherits LayoutComponentBase
@inject IJSRuntime JsRuntime
@inject ThemeService ThemeService
@inject IEmployeeContextService EmployeeContextService

<RadzenComponents @rendermode="InteractiveServer"/>

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center"
                     JustifyContent="JustifyContent.SpaceBetween" Gap="0">
            <div style="display: flex; align-items: center; gap: 1rem;">
                <RadzenSidebarToggle Click="@(() => _sidebarExpanded = !_sidebarExpanded)"/>
                <RadzenText TextStyle="TextStyle.H5"
                            Style="margin: 0; font-weight: 600; color: var(--rz-text-primary);">
                    ChronoLog
                </RadzenText>
            </div>

            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem"
                         Style="padding: 0.5rem;">
                <RadzenButton Icon="@ThemeIcon"
                              ButtonStyle="ButtonStyle.Light"
                              Variant="Variant.Flat"
                              Size="ButtonSize.Medium"
                              Click="ToggleTheme"
                              Style="border-radius: 50%; width: 40px; height: 40px;"/>

                <RadzenProfileMenu>
                    <Template>
                        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
                            <div class="user-avatar-small">
                                @GetInitials(_currentEmployee?.Name)
                            </div>
                        </RadzenStack>
                    </Template>
                    <ChildContent>
                        <RadzenProfileMenuItem
                            Text="@($"{_vacationDaysTaken} / {_currentEmployee?.VacationDaysPerYear} Vacationdays")"
                            Icon="event"
                            Style="pointer-events: none; opacity: 0.9;"/>

                        <RadzenProfileMenuItem/>

                        <RadzenProfileMenuItem Text="Personal Settings" Icon="manage_accounts" Path="personalsettings"/>
                        <RadzenProfileMenuItem Text="Logout" Icon="logout"
                                               Path="MicrosoftIdentity/Account/SignOut?returnUrl=/"/>
                    </ChildContent>
                </RadzenProfileMenu>
            </RadzenStack>
        </RadzenStack>
    </RadzenHeader>

    @if (_isMobile)
    {
        <RadzenSidebar Responsive="true" Expanded="@_sidebarExpanded" Style="width: max-content">
            <NavMenu IsExpanded="true"/>
        </RadzenSidebar>
    }
    else
    {
        <RadzenSidebar Responsive="@_sidebarExpanded" Style="width: max-content">
            <NavMenu IsExpanded="@_sidebarExpanded"/>
        </RadzenSidebar>
    }

    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>

    <RadzenFooter>
        <RadzenStack Orientation="Orientation.Horizontal"
                     AlignItems="AlignItems.Center"
                     JustifyContent="JustifyContent.Center">
            <RadzenText TextStyle="TextStyle.Caption">
                © @DateTime.Now.Year Felix Heinke. All rights reserved.
            </RadzenText>
        </RadzenStack>
    </RadzenFooter>
</RadzenLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _sidebarExpanded;
    private bool _isMobile;

    private EmployeeModel? _currentEmployee;
    private int _vacationDaysTaken;

    private string ThemeIcon => ThemeService.Theme == "material" ? "dark_mode" : "light_mode";

    protected override async Task OnInitializedAsync()
    {
        _currentEmployee ??= await EmployeeContextService.GetOrCreateCurrentEmployeeAsync();
        _vacationDaysTaken = await EmployeeContextService.GetEmployeeVacationDaysCountAsync(_currentEmployee.EmployeeId, DateTime.UtcNow.Year);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await base.OnAfterRenderAsync(firstRender);
            _isMobile = await JsRuntime.InvokeAsync<bool>("eval", "window.innerWidth < 768");
            StateHasChanged();
        }
    }

    private void ToggleTheme()
    {
        var newTheme = ThemeService.Theme == "material" ? "material-dark" : "material";
        ThemeService.SetTheme(newTheme);
        StateHasChanged();
    }

    private static string GetInitials(string? name)
    {
        if (string.IsNullOrWhiteSpace(name))
            return "?";

        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        return parts.Length >= 2 ? $"{parts[0][0]}{parts[1][0]}".ToUpper() : parts[0][0].ToString().ToUpper();
    }

}
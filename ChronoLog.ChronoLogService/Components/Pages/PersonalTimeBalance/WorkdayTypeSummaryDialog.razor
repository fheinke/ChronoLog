@using ChronoLog.Core.Models
@inject DialogService DialogService

<RadzenCard Style="padding: 1.5rem; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
    <RadzenStack Gap="1rem" Orientation="Orientation.Vertical">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
            <RadzenIcon Icon="calendar_today" Style="font-size: 2rem; color: #2196F3;" />
            <RadzenText TextStyle="TextStyle.H5" Style="font-weight: bold;">Workday Details</RadzenText>
        </RadzenStack>
        <RadzenDataGrid Data="@WorkdayTypeCounts" TItem="KeyValuePair<WorkdayType, int>" Style="width: 100%;">
            <Columns>
                <RadzenDataGridColumn TItem="KeyValuePair<WorkdayType, int>" Property="Key" Title="Workday Type" />
                <RadzenDataGridColumn TItem="KeyValuePair<WorkdayType, int>" Property="Value" Title="Number of Days" />
            </Columns>
        </RadzenDataGrid>
        <RadzenButton Text="Close" Click="CloseDialog" ButtonStyle="ButtonStyle.Primary" Style="width: 100%;" />
    </RadzenStack>
</RadzenCard>

@code {
    [Parameter] public Dictionary<WorkdayType, int> WorkdayTypeCounts { get; set; } = [];

    private void CloseDialog()
    {
        DialogService.Close();
    }

}
